<% include  ../partials/header %>
<% include  ../partials/navbar %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">El Cajon City Social App</p>
            <div class="list-group">
                <li class="list-group-item active">Item 1</li>
                <li class="list-group-item">Item 2</li>
                <li class="list-group-item">Item 3</li>
                <li class="list-group-item disabled">Item 4</li>
            </div>
        </div>
        <div class="col-md-9">
            <figure class="figure">
                <img src="<%= shops.image %>" class="img img-fluid rounded" >
                <figcaption class="caption"><a><%= shops.name %></a></figcaption>
                <figcaption class="caption"><a>$9.00/night</a></figcaption>
                <figcaption class="caption"><a><%= shops.service %></a></figcaption>
            </figure>
            
            <div class="card">
                <div class="text-right">
                    <a class="btn btn-success" href="/localshops/<%=shops.id%>/comments/new">Add new comment</a>
                </div>
                <% shops.comments.forEach(function(comment) { %>
                    <div class="row">
                        <div class="col-md-12 card-subtitle">
                            <%= comment.author %>
                            <span class="text-right">10 days ago</span>
                        </div>
                        <p>
                            <%= comment.text %>
                        </p>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>




<% include  ../partials/footer %>